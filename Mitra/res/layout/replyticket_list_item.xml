<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_text"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ticket_id"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ticket_bg_shape"
        android:gravity="center"
        android:maxLength="7"
        android:singleLine="true"
        android:text="IT"
        android:textColor="@android:color/white"
        android:textSize="11dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <!-- android:id="@+id/depart_id" -->

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/arrow" />

            <TextView
                android:id="@+id/department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/arrow"
                android:maxLength="8"
                android:singleLine="true"
                android:text="101"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/depart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/department_name"
                android:maxLength="28"
                android:maxWidth="110dp"
                android:singleLine="true"
                android:text="-Title  skdflksdjlkf dslkf lksdf lkds"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/depart_title"
                android:singleLine="true"
                android:text="Created date"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="11:30AM"
                android:textColor="@android:color/black"
                android:textSize="@dimen/reply_tic_siz"
                android:textStyle="normal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/depart_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_layout"
            android:layout_marginRight="@dimen/reply_ticket_txt_mag1"
            android:layout_marginTop="-4dp"
            android:maxLines="2"
            android:text="This is test descrip "
            android:textColor="@android:color/black"
            android:textSize="@dimen/reply_tic_siz" />

        
