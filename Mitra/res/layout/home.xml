<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    

    
    <TextView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/leavedet_txt_ht1"
        android:background="@color/blue_main"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white_text"
        android:textSize="@dimen/heading"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sum_lv_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginTop="6dp"
        android:background="#225dab"
        android:text="Logout"
        android:textColor="@color/white_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <Spinner
    android:id="@+id/store_spinner"
    android:layout_below="@id/logout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
    
   
    
    <ListView
        android:id="@+id/homelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:layout_below="@id/store_spinner"
        android:divider="@color/blue_main"
      >
    </ListView>

    <include
        android:id="@+id/bottem"
        layout="@layout/common_layout" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

</RelativeLayout>