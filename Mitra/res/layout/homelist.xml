<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white_text" android:padding="5dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/home_listvv_item_ht"
        android:layout_height="@dimen/home_listvv_item_ht"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:background="@drawable/ticket_bg_shape"
          />

    <TextView
        android:id="@+id/txt"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/img"
        android:textColor="@android:color/black"
        android:textSize="@dimen/listtext_size"
/>

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/txt"
        android:background="@color/app_theam_color"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>