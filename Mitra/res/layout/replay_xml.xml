<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/background_wt"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/leavedet_txt_ht1"
        android:background="@drawable/bottom_ar"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="Reply Ticket"
        android:textColor="@android:color/white"
        android:textSize="@dimen/heading"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back_btnn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backbutton_48x48_in20x20" />

    
          <Spinner
        android:id="@+id/department_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
   android:layout_marginRight="-10dp"
              android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
    />
    
        <ListView
        android:id="@+id/reply_ListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_img"
    
       android:cacheColorHint="@android:color/transparent" 
        android:layout_marginBottom="@dimen/bottom_ht"
        android:background="@android:color/white"
         android:divider="#E0E0E0"
            android:dividerHeight=".5dp"
         >
    </ListView>
    
        
          <com.tgs.mitra.BottomLayout
        android:id="@+id/bottem"
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
